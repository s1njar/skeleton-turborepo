{
  "extends": "@cfg/tsconfig/tsconfig.nextjs.json",
  "compilerOptions": {
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"]
    },
    "types": ["@types/jest", "jest", "node"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
